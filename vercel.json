{
  "version": 2,
  "builds": [
    {
      "src": "backend/Cargo.toml",
      "use": "@vercel/rust",
      "config": { "handler": "vercel_handler" }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}